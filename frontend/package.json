{
  "name": "conversationhub-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext js,jsx,ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "test:setup": "playwright install",
    "test:recording": "jest src/components/recording/clean/__tests__",
    "test:recording:watch": "jest src/components/recording/clean/__tests__ --watch",
    "test:recording:coverage": "jest src/components/recording/clean/__tests__ --coverage",
    "e2e:recording": "playwright test e2e/meeting/auto-recording.spec.ts",
    "e2e:recording:debug": "playwright test e2e/meeting/auto-recording.spec.ts --debug",
    "e2e:recording:headed": "playwright test e2e/meeting/auto-recording.spec.ts --headed",
    "test:all:recording": "npm run test:recording && npm run e2e:recording",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.15.1",
    "@mui/material": "^5.15.1",
    "@tanstack/react-query": "^5.12.2",
    "axios": "^1.6.2",
    "lucide-react": "^0.525.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/dom-mediacapture-record": "^1.0.22",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.2",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3",
    "vite": "^5.0.8"
  }
}
